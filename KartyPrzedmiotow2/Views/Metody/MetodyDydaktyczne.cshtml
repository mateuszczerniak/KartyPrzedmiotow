@model IEnumerable<KartyPrzedmiotow2.Models.MetodyDydaktyczneListElement>

@{
    ViewBag.Title = "Metody Dydaktyczne";
}

<h2>Metody Dydaktyczne</h2>

<p>
    @Html.ActionLink("Dodaj metodę dydaktyczną", "MetodyDydaktyczneCreate", new { Id = ViewBag.Id }, htmlAttributes: new { @class = "btn btn-primary", @role = "button", @style = "margin:2px" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grupa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LiczbaProgramow)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grupa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LiczbaProgramow)
        </td>
        <td>
            @*@Html.ActionLink("Edytuj", "Edit", new { id=item.Id }) |*@
            @if (item.LiczbaProgramow == 0)
            {
                @Html.ActionLink("Usuń", "MetodyDydaktyczneDelete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary", @role = "button", @style = "margin:2px" })
            }
        </td>
    </tr>
}

</table>
