@using KartyPrzedmiotow2.Models
@model KartyPrzedmiotow2.Models.GrupyMetodList
@{
    ViewBag.Title = "Dodawanie Metody dydaktycznej";
}

<h2>Dodawanie nowej metody dydaktycznej</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table>
            <tr>
                <th>Grupa</th>
                <th>Nazwa</th>
            </tr>
            <tr>
                <td>@Html.DropDownListFor(m => m.GrupyMetodDydaktycznychId, Model.GrupyMetod, new { @class = "form-control" })</td>
                <td>@Html.EditorFor(model => model.Nazwa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nazwa, "", new { @class = "text-danger" })</td>
            </tr>
        </table>
