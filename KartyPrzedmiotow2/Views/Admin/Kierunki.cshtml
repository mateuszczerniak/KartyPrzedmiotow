@model IEnumerable<KartyPrzedmiotow2.Models.KierunekListElement>

@{
    ViewBag.Title = "Kierunki";
}

<h2>Kierunki</h2>

<p>
    @Html.ActionLink("Dodaj kierunek", "KierunekCreate", new { wydzialId = ViewBag.WydzialId }, htmlAttributes: new { @class = "btn btn-primary", @role = "button", @style = "margin:2px" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LiczbaProgramow)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LiczbaSpecjalnosci)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LiczbaProgramow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LiczbaSpecjalnosci)
            </td>
            <td>
                @Html.ActionLink("Specjalności", "Specjalnosci", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary", @role = "button", @style = "margin:2px" })
                @if (item.LiczbaSpecjalnosci + item.LiczbaProgramow == 0)
                {
                    <text>| @Html.ActionLink("Usuń", "KierunekDelete", new { id = item.Id })</text>
                }
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Wróć", "Wydzialy")
</div>
