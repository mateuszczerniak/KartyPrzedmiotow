@model KartyPrzedmiotow2.Models.UserEditViewModel

@{
    ViewBag.Title = "Edycja użytkownika";
}

<h2>Edycja użytkownika</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Imie, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Imie, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Imie, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nazwisko, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nazwisko, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nazwisko, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.WybraneRole, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select id="@Html.IdFor(model => model.WybraneRole)" name="@Html.NameFor(model => model.WybraneRole)" class="form-control selectpicker" multiple="multiple" title="Wybierz role">
                @foreach(var option in Model.Role)
                {
                    <option @(option.Selected ? "selected": "") value="@option.Value">@option.Text</option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.WybraneRole, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.WybraneTytuly, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            <select id="@Html.IdFor(model => model.WybraneTytuly)" name="@Html.NameFor(model => model.WybraneTytuly)" class="form-control selectpicker" multiple="multiple" title="Wybierz tytuły">
                @foreach (var option in Model.Tytuly)
                {
                    <option @(option.Selected ? "selected" : "") value="@option.Value">@option.Text</option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.WybraneTytuly, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.WybraneWydzialy, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            <select id="@Html.IdFor(model => model.WybraneWydzialy)" name="@Html.NameFor(model => model.WybraneWydzialy)" class="form-control selectpicker" multiple="multiple" title="Wybierz wydziały">
                @foreach (var option in Model.Wydzialy)
                {
                    <option @(option.Selected ? "selected" : "") value="@option.Value">@option.Text</option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.WybraneWydzialy, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zapisz" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Wróć", "Index")
</div>
